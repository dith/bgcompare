<%= form_tag("search", method: 'get') do %>
  <p>
    <%= label_tag(:search, "Search for:") %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag("Search on BGG", :name => nil) %>
  </p>
<% end %>

<%
if @data.class != NilClass
  @data.each do |item|
%>
  <ul>
    <li><%= item["id"] %></li>
    <li><%= item["name"]["value"] %></li>
    <li><%= item["yearpublished"] ? item["yearpublished"]["value"] : "" %></li>
  </ul>
<%
  end
elsif params[:commit] == "Search" && params[:search].length > 0
%>
<h2>No results found.</h2>
<%
end
%>

